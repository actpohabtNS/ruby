<div class="wrap">
  <%= form_with model: @student do |form|  %>
    <div class="input-line">
      <%= form.label :name %>
      <%= form.text_field :name %>
      <% @student.errors.full_messages_for(:name).each do |message| %>
        <div class="error"> <%= message %></div>
      <% end %>
    </div>

    <div class="input-line">
      <%= form.label :surname %>
      <%= form.text_field :surname %>
      <% @student.errors.full_messages_for(:surname).each do |message| %>
        <div class="error"> <%= message %></div>
      <% end %>
    </div>

    <div class="input-line">
      <%= form.label :middlename %>
      <%= form.text_field :middlename %>
      <% @student.errors.full_messages_for(:middlename).each do |message| %>
        <div class="error"> <%= message %></div>
      <% end %>
    </div>

    <div class="input-line">
      <%= form.label :gender %>
      <%= form.text_field :gender %>
      <% @student.errors.full_messages_for(:gender).each do |message| %>
        <div class="error"> <%= message %></div>
      <% end %>
    </div>

    <div class="input-line">
      <%= form.label :age %>
      <%= form.text_field :age %>
      <% @student .errors.full_messages_for(:age).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="input-line">
      <%= form.label :year %>
      <%= form.text_field :year %>
      <% @student .errors.full_messages_for(:year).each do |message| %>
        <div class="error"><%= message %></div>
      <% end %>
    </div>

    <div class="button">
      <%= form.submit %>
    </div>
  <% end %>
</div>