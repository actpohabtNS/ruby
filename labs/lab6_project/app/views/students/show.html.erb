<h1> Student: <%= @student.surname %> </h1>

<div class="wrap-info">
<ul class="student-info">
  <li>Name: <%= @student.name %></li>
  <li>Surname: <%= @student.surname %> </li>
  <li>Middlename: <%= @student.middlename %> </li>
  <li>Gender: <%= @student.gender %></li>
  <li>Age: <%= @student.age %> y.o. </li>
  <li>University year: <%= @student.year %> course</li>
</ul>
<div class='button-new delete'>
  <%= link_to  edit_student_path(@student) do%>
    <p>Edit</p>
  <%end%>
  <%= link_to  student_path(@student), method: :delete, data: { confirm: "Are you sure?" } do %>
    <p>Delete</p>
  <% end %>
</div>
</div>
<div class='button-new'>
  <%= link_to  "/students" do%>
    <p>Back</p>
  <%end%>
</div>

<%= render "footer"%>


